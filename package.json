{
  "name": "frenchfry",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "clean": "rm -rf dist coverage .vitest **/*.tsbuildinfo",
    "demo:dev": "set -a; [ -f .env ] && . ./.env; set +a; npm run dev --workspace @frenchfryai/demo-server & npm run dev --workspace @frenchfryai/demo-app & wait",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.4.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  }
}
